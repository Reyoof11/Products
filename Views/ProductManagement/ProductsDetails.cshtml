@model IEnumerable<Products.Models.Products_Details>

<div class="container">
    <h1>Product Details</h1>

    <!-- Form to Add Product Details -->
    <form asp-action="ProductsDetails" method="post">
        <div class="row mb-3">
            <div class="col">
                <label for="Products_Id">Select Product</label>
                <select id="Products_Id" name="Products_Id" class="form-control" required>
                    @foreach (var product in ViewBag.Products)
                    {
                        <option value="@product.Id">@product.Name</option>
                    }
                </select>
            </div>
            <div class="col">
                <label for="Color">Color</label>
                <input type="text" id="Color" name="Color" class="form-control" required />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col">
                <label for="Image">Image</label>
                <input type="text" id="Image" name="Image" class="form-control" required />
            </div>
            <div class="col">
                <label for="QTY">Quantity</label>
                <input type="number" id="QTY" name="QTY" class="form-control" required />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col">
                <label for="Price">Price</label>
                <input type="number" id="Price" name="Price" step="0.01" class="form-control" required />
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>

    <h2 class="mt-5">Existing Product Details</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Product</th>
                <th>Color</th>
                <th>Image</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model)
            {
                <tr>
                    <td>@detail.Id</td>
                    <td>@detail.Products_Id</td>
                    <td>@detail.Color</td>
                    <td>@detail.Image</td>
                    <td>@detail.QTY</td>
                    <td>@detail.Price</td>
                </tr>
            }
        </tbody>
    </table>
</div>
