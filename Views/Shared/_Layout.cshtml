<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Products</title>
    <script type="importmap"></script>
    <link href="https://fonts.googleapis.com/css2?family=Amiri&display=swap" rel="stylesheet"> <!-- خط الرقعة -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Products.styles.css" asp-append-version="true" />
    <style>
        body {
            font-family: 'Amiri', serif; /* خط الرقعة */
            background-color: #f5f1e3; /* Beige background */
            color: #4e3b31; /* Brown text color */
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .navbar {
            background-color: #6c4f37; /* Brown background for the header */
        }

        .navbar-brand {
            color: #f5f1e3; /* Beige text color */
            font-family: 'Amiri', serif; /* خط الرقعة */
            font-size: 2rem; /* تكبير حجم اسم يدوي */
        }

        .nav-link {
            color: #f5f1e3; /* Beige text color */
            font-family: 'Amiri', serif; /* خط الرقعة */
        }

            .nav-link:hover {
                color: #f5f1e3; /* Beige hover effect */
            }

        .navbar-nav .nav-link {
            font-size: 1.2rem; /* زيادة حجم الخط */
        }

        .footer {
            background-color: #6c4f37;
            color: #f5f1e3;
            padding: 20px 0;
            text-align: center;
            margin-top: auto; /* Keep the footer at the bottom */
        }

            .footer a {
                color: #f5f1e3; /* Beige link color */
                text-decoration: none;
            }

                .footer a:hover {
                    color: #ffcc00; /* Highlight on hover */
                    text-decoration: underline;
                }

            .footer .container {
                display: flex;
                justify-content: center;
                align-items: center;
            }

                .footer .container p {
                    margin: 0;
                    font-size: 1rem;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">يدوي</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">منتجات</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">متجر</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer Section -->
    <footer class="footer text-muted">
        <div class="container">
            <p>&copy; 2025 - Products - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
